@model IEnumerable<MailsControlSystem.Models.IOMailWrapperModel>

@{
    ViewBag.Title = "Lista";
}

<h2>Lista de Envíos</h2>

<p>
    @Html.ActionLink("Añadir Nuevo", "Create","IOMail")
</p>

@using (Html.BeginForm())
{
    <p>
        Buscar por Nro de Guía: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string) &nbsp;
        <input type="submit" value="Buscar" />
    </p>
}

<table>
    <tr> 
        <th>
            Fecha de Envío
        </th>
        <th>
            Hora de Envío
        </th> 
        <th>
            Guía
        </th> 
        <th>
            Remitente
        </th>   
        <th>
            Destinatario
        </th>
        <th>
            Cant. Enviada
        </th>
        <th>
            Descripción
        </th>       
        <th>
            Destino
        </th>
        <th>
            Observaciones
        </th>   
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.outcoming.SendDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.outcoming.SendTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.mail.GuideNumber)
        </td>
        <td>
        @Html.DisplayFor(modelItem => item.incoming.UserAccount.Person.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.outcoming.UserAccount.Person.FullName)
        </td>     
        <td>
            @Html.DisplayFor(modelItem => item.outcoming.Quanty)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.outcoming.Description)
        </td>      
        <td>
            @Html.DisplayFor(modelItem => item.outcoming.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.outcoming.Observations)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", "IOMail", new { id = item.outcoming.OutcomingID }, null) |
            @*@Html.ActionLink("Details", "Details", "IOMail",new { id=item.OutcomingID }, null) |*@
            @Html.ActionLink("Borrar", "Delete", "IOMail", new { id = item.outcoming.OutcomingID }, null)
        </td>
    </tr>
}
</table>
